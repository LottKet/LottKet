<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="Product">

    <!-- 수정 전입니다 -->
    <insert id="createDB" parameterType="java.util.HashMap">
        <if test="goodsList.size != 0">
            INSERT INTO EVENT_GOODS_MNG
            (
            EVENT_GOODS_MNG_IDX
            , GOODS_IDX
            )
            VALUES
            <foreach collection="goodsList" item="item" separator=",">
                (
                #{eventIdx}
                , #{item.goodsIdx}
                )
            </foreach>
        </if>
    </insert>


    <select id="findOneProduct" resultType="lotte.com.lottket.dto.ProductDto">
        select product_id,
               product_title,
               product_category,
               product_price,
               product_stock,
               product_regdate
        from product
        WHERE product_id = 2
    </select>


</mapper>