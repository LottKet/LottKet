<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="Category">

<select id="findByCategoryOrderByProductPrice" parameterType="String" resultType="lotte.com.lottket.dto.ProductDto">
    select *
    from product
    where product_category=#{productCategory}
    order by product_price desc
</select>

<select id="findByCategoryOrderByProductRegDate" parameterType="String" resultType="lotte.com.lottket.dto.ProductDto">
    select *
    from product
    where product_category = #{productCategory}
    order by product_regdate desc
</select>

</mapper>